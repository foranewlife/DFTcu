# Doxyfile for DFTcu

PROJECT_NAME           = "DFTcu"
PROJECT_NUMBER         = @PROJECT_VERSION@
PROJECT_BRIEF          = "CUDA-accelerated DFT calculations"
OUTPUT_DIRECTORY       = @CMAKE_BINARY_DIR@

INPUT                  = @CMAKE_SOURCE_DIR@/src \
                         @CMAKE_SOURCE_DIR@/README.md \
                         @CMAKE_SOURCE_DIR@/DEVELOPMENT.md \
                         @CMAKE_SOURCE_DIR@/docs/blog
RECURSIVE              = YES
FILE_PATTERNS          = *.cu *.cuh *.h *.cpp *.md

EXTRACT_ALL            = YES
EXTRACT_PRIVATE        = NO
EXTRACT_STATIC         = YES

GENERATE_HTML          = YES
HTML_OUTPUT            = html
HTML_COLORSTYLE_HUE    = 220
HTML_COLORSTYLE_SAT    = 100
HTML_COLORSTYLE_GAMMA  = 80

GENERATE_LATEX         = NO

HAVE_DOT               = YES
UML_LOOK               = YES
CALL_GRAPH             = YES
CALLER_GRAPH           = YES

JAVADOC_AUTOBRIEF      = YES
QT_AUTOBRIEF           = YES

USE_MDFILE_AS_MAINPAGE = @CMAKE_SOURCE_DIR@/README.md

EXAMPLE_PATH           = @CMAKE_SOURCE_DIR@/tests

# CUDA specific
EXTENSION_MAPPING      = cu=C++ cuh=C++
PREDEFINED             = __global__= \
                         __device__= \
                         __host__= \
                         __constant__= \
                         __shared__=

EXCLUDE_PATTERNS       = */external/* \
                         */.venv/* \
                         */build/*
